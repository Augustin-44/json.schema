{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "Arcane",
    "type": "array",
    "items": {
        "$ref": "#/definitions/Welcome8Element"
    },
    "definitions": {
        "Welcome8Element": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "classe": {
                    "type": "string",
                    "description": "Classe à laquelle le job appartient.\n ex: jobs.exec.sql.JobExtractTable pour JobExtractTable ",
                    "default": "A completer"
                },
                "mex": {
                    "type": "string",
                    "description": "Mex auquel le job appartient",
                    "default": "A completer"
                },
                "parametres": {
                    "type": "array",
                    "description": "Paramètres du job",
                    "items": {
                        "$ref": "#/definitions/Parametre"
                    }
                }
            },
            "required": [
                "classe",
                "mex",
                "parametres"
            ],
            "title": "Grammaire Arcane",
            "description": "Controlleur syntaxique. Vérifie la bonne écriture de la grammaire Arcane."
        },
        "Parametre": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "nom": {
                    "type": "string"
                },
                "valeurs": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "nom",
                "valeurs"
            ],
            "title": "Parametre"
        }
    }
}
